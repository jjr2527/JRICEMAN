            %h2 Contact us to get started today
            %span.phone-number 414-555-1212 
            %span.phone-number 414-555-1212
            %span.phone-number 414-555-1212
      .span-24.rotator
        %img{:src => "/images/manitowochd.jpg", :alt => ""}
        %img{:src => "/images/manitowoc.jpg", :alt => ""}
        %img{:src => "/images/hoshizaki.jpg", :alt => ""}        
      :javascript
        $('div.rotator').cycle({
          fx:     'fade',
          speed:   300,
          timeout: 4000
        });          
